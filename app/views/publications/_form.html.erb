<%= form_with(model: publication) do |form| %>
  <% if publication.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
        <% publication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control"  %>
  </div>

  <div>
    <%= form.label :description, style: "display: block"  %>
    <%= form.text_field :description, class: "form-control" %>
  </div>
  <%= form.hidden_field :user_id %>
  <div>
    <select class="form-select mt-2" name="publication[cat_id]" id="publication_cat_id">
      <option value="-1" selected >Seleccione un gato</option>
        <% @cats.each do |cat| %>
          <option value="<%= cat.id %>"> <%= cat.id %> - <%= cat.name %> </option>
        <% end %>
    </select>
  </div>

  <div>
    <%= form.submit  class: "btn btn-primary mt-3" %>
  </div>
<% end %>
